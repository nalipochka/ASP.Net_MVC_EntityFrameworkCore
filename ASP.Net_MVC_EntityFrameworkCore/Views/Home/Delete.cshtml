@model Book
<form method="post">
    <input type="hidden" name="id" value="@Model.Id"/>
    <h2>Are you sure you want to delete the book '@Model.Title' of @Model.Author?</h2>
    <input type="submit" class="btn btn-danger" value="Delete" />
    <a asp-action="Library" class="btn btn-info">Return to books</a>
</form>
